<div class="login-container">
  <div class="login-card">
    
    <div class="text-center">
      <div class="login-logo-icon">
        <i class="bi bi-code-slash" style="font-size: 3rem; color: white;"></i>
      </div>
      <h1 class="login-title">新規登録</h1>
      <p class="login-subtitle">学習の旅を始めましょう</p>
    </div>
    <div class="card">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false } }) do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "form-label" %>
          <% if resource && resource.errors[:email].present? %>
            <div class="field-error">
              <% resource.errors.full_messages_for(:email).each do |msg| %>
                <div class="field-error-item"><%= msg %></div>
              <% end %>
            </div>
          <% end %>
          <div class="input-group">
            <i class="bi bi-envelope input-icon"></i>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "example@devjourney.com" %>
          </div>
        </div>

        <div class="mb-4">
          <%= f.label :devjourney_id, "DevJourney ID(アカウントID)", class: "form-label" %>
          <% if resource && resource.errors[:devjourney_id].present? %>
            <div class="field-error">
              <% resource.errors.full_messages_for(:devjourney_id).each do |msg| %>
                <div class="field-error-item"><%= msg %></div>
              <% end %>
            </div>
          <% end %>
          <div class="input-group">
            <i class="bi bi-person input-icon"></i>
            <%= f.text_field :devjourney_id, autocomplete: "username", class: "form-control", placeholder: "devjourney_yourname" %>
          </div>
          <div class="form-text">他のユーザーと重複してはいけません。</div>
        </div>
        
        <div class="mb-4">
          <%= f.label :password, (@minimum_password_length ? "パスワード（#{@minimum_password_length}文字以上、半角英数字で、英大文字・英小文字・数字を各1文字以上含む）" : "パスワード (半角英数字で、英大文字・英小文字・数字を各1文字以上含む)"), class: "form-label" %>
          <% if resource && resource.errors[:password].present? %>
            <div class="field-error">
              <% resource.errors.full_messages_for(:password).each do |msg| %>
                <div class="field-error-item"><%= msg %></div>
              <% end %>
            </div>
          <% end %>
          <div class="input-group">
            <i class="bi bi-lock input-icon"></i>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "••••••••" %>
          </div>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label" %>
          <% if resource && resource.errors[:password_confirmation].present? %>
            <div class="field-error">
              <% resource.errors.full_messages_for(:password_confirmation).each do |msg| %>
                <div class="field-error-item"><%= msg %></div>
              <% end %>
            </div>
          <% end %>
          <div class="input-group">
            <i class="bi bi-lock-fill input-icon"></i>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "••••••••" %>
          </div>
        </div>

        <%= f.submit "登録", class: "btn btn-submit w-100 mb-4" %>

        <div class="text-center">
          <a href="<%= new_user_session_path %>" class="link-primary d-block">
              アカウントをお持ちの方はこちら
          </a>
        </div>
      <% end %>
    </div>

    <div class="code-snippet">
      <div class="code-dots">
        <div class="dot dot-red"></div>
        <div class="dot dot-yellow"></div>
        <div class="dot dot-green"></div>
      </div>
      <pre class="code-text"><span class="code-keyword">const</span><span class="code-value"> newDeveloper = </span><span class="code-string">"誕生"</span><span class="code-value">;</span></pre>
    </div>
  </div>
</div>
