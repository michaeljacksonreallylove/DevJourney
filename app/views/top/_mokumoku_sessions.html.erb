<div class="home-mokumoku-session mb-3">
  <div class="d-flex align-items-center justify-content-between mb-2">
    <span class="badge-live">
      <span class="pulse-dot"></span>
      LIVE
    </span>
    <div class="mokumoku-start-time gradient-purple-pink px-2 py-1.5 d-flex align-items-center gap-1" style="color: white;">
      <i class="bi bi-clock"></i>
      <%= datetime_to_time_string(mokumoku_session.created_at) %>~
    </div>
  </div>
  <h3 class="fw-bold fs-5 mb-2"><%= mokumoku_session.title %></h3>
  <p class="text-muted small mb-3"><%= mokumoku_session.description %></p>
  <div class="d-flex align-items-center gap-1 text-muted small mb-2">
    <i class="bi bi-person"></i>
    <div class="me-2">主催者:</div>
    <a href="<%= mokumoku_session.user.profile_page_uri %>" class="user-section">
      <%= image_tag mokumoku_session.user.avatar.url, class: "user-avatar" %>
      <div class="user-devjourney-id">@<%= mokumoku_session.user.devjourney_id %></div>
    </a>
  </div>

  <% if user_signed_in? %>
    <div class="mokumoku-url-box px-3 py-2 my-3">
        <i class="bi bi-camera-video" style="color: #64748b;"></i>
        <a href="<%= mokumoku_session.session_url %>" target="_blank" rel="noopener" class="url-link"><%= mokumoku_session.session_url %></a>
    </div>
    <a href="<%= mokumoku_session.session_url %>" class="btn gradient-purple w-100" style="color: white;" target="_blank" rel="noopener">参加する</a>
  <% else %>
    <p class="text-muted text-center small m-0">もくもく会に参加するにはログインが必要です</p>
  <% end %>
</div>