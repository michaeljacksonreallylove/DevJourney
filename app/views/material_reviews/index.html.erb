<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-9 col-lg-9">
      <div class="header-wrapper mb-4">
        <div class="d-flex align-items-center gap-2">
          <div class="header-icon">
            <i class="bi bi-star"></i>
          </div>
          <h1 class="page-title">おすすめ教材•レビュー</h1>
        </div>
        <p class="page-subtitle mt-2">みんなのおすすめ学習教材をチェックしよう!</p>
      </div>
      <%= render partial: "reviews", collection: @material_reviews, as: :material_review %>
      <div class="mt-4 d-flex justify-content-center">
        <%= paginate @material_reviews %>
      </div>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <div class="d-flex justify-content-center">
    <a href="<%= new_material_review_path %>" class="btn btn-submit write-review-btn">
      <i class="bi bi-plus-lg"></i>
      <div class="ps-1">レビューを投稿する</div>
    </a>
  </div>
<% end %>